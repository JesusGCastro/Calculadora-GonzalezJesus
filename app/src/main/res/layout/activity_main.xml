<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <!-- TextView para mostrar resultados -->
    <TextView
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="32sp"
        android:gravity="end"
        android:padding="16dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15" />

    <!-- Botones numéricos y operativos -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="4"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fila 1 -->
        <Button
            android:id="@+id/siete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/siete"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/ocho"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/ocho"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/nueve"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/nueve"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/divi"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <!-- Fila 2 -->
        <Button
            android:id="@+id/cuatro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/cuatro"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/cinco"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/cinco"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/seis"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/seis"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <!-- Nuevo botón con el símbolo + -->
        <Button
            android:id="@+id/mas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="+"
            android:textSize="30dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <!-- Fila 3 -->

        <Button
            android:id="@+id/uno"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/uno"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/dos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/dos"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/tres"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/tres"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/multiplicacion"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/multi"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <!-- Fila 4 -->
        <Button
            android:id="@+id/borrar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/borrar"
            android:textSize="20dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/cero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/cero"
            android:textSize="25dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/punto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/punto"
            android:textSize="30dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/resta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/resta"
            android:textSize="30dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/igual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/igual"
            android:textSize="30dp"
            android:layout_rowWeight="0.8"
            android:layout_columnWeight="0.8"
            android:layout_margin="4dp" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
